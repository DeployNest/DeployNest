{
	"compilerOptions": {
	  "target": "es2020",
	  "module": "commonjs",
	  "lib": ["es2020"],
	  "esModuleInterop": true,
	  "skipLibCheck": true,
	  "forceConsistentCasingInFileNames": true,
	  "outDir": "./dist",
	  "rootDir": "./src",
	  "baseUrl": "./src",
	  "paths": {
		"*": ["*"]
	  }
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist"]
  }